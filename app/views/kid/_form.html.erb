
<%= form_for(@kid) do |f| %>
  <% if @kid.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@kid.errors.count, "error") %> prohibited this kid from being saved:</h2>

      <ul>
      <% @kid.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<div class="field">
		<%= f.label :parent %>
	</br>
		<%= select_tag(:parent, options_from_collection_for_select(Parent.all, :id, :f_name) ) %>
	</br>
		<%= link_to 'New Parent',  "/parents/new/true"%>
	</div>
	<div class="field">
		<%= f.label :allergy %>
	</br>
		<%= select_tag(:allergy, options_from_collection_for_select(Allergy.all, :id, :name) ) %>
	</br>
		<%= link_to 'New Allergy', "/allergies/new/true" %>
	</div>

  
	<div class="field">
		<%= f.label :f_name, "First Name"%><br>
    <%= f.text_field :f_name %>
	</div>
	<div class="field">
		<%= f.label :m_name, "Middle Name"%><br>
    <%= f.text_field :m_name %>
	</div>
	<div class="field">
		<%= f.label :l_name, "Last Name" %><br>
    <%= f.text_field :l_name %>
	</div>
	<div class="field">
		<%= f.label :dob, "Date of Birth" %><br>
    <%= f.date_field :dob %>
	</div>
	<div class="field">
		<%= f.label :first_date_attended, "First Date Attended" %><br>
    <%= f.date_field :first_date_attended %>
	</div>
	
	
	<div class="field">
		<%= f.label :gender %><br>
		<%= f.select(:gender, Kid.genders.keys.map {|gender| [gender]}) %>
	</div>
	<div class="field">
		<%= f.label :group %><br>
		<%= f.select(:group, Kid.groups.keys.map {|group| [group]}) %>
	</div>
	
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
