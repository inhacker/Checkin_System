<h1>Show Kid</h1>

<table class="tables">
  <tr>
    <th>First Name</th>
		<th>Middle Name</th>
    <th>Last Name</th>
		<th>Date of Birth</th>
		<th>First Attended</th>
		<th>Currently Checked In</th>
		<th>Gender</th>
		<th>Group</th>
		<th>Parents</th>
		<th>Allergies</th>
  </tr>
 
  <tr>
    <td><%= @kid.f_name %></td>
    <td><%= @kid.m_name %></td>
    <td><%= @kid.l_name %></td>
    <td><%= @kid.dob %></td>
    <td><%= @kid.first_date_attended %></td>
    <td><%= @kid.is_checked_in %></td>
    <td><%= @kid.gender %></td>
    <td><%= @kid.group %></td>
		<td>
			<% @kid.parents.each do |f| %>
				<%= f.f_name %>
			<% end %>
		</td>
		<td>
			<% Allergic.where(:kid_id => @kid.id).each do |a| %>
				<%= Allergy.find_by(id: a.allergy_id).name%>
			<% end %>
		</td>
  </tr>
</table>
<div class="change_links">
<%= button_to 'Edit', edit_kid_path(@kid), method: :get %>
</div>
<div class="change_links">
<%= button_to 'Edit Parents',	edit_parents_path(@kid), method: :get %>
</div>
<div class="change_links">
<%= button_to 'Back', kid_index_path, method: :get %>
</div>
