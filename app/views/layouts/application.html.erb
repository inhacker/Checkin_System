<!DOCTYPE html>
<html>
<head>
  <title>Kids Checkin System</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= html_import_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body unresolved>
	<div id="wrap">
		<%= render 'layouts/header' %>

		<div id="main">
			<div class="container">
				<!-- this is used for when you want to set a message and show the user -->
				<% flash.each do |type, msg| %>
					<div class="flash-<%= type %>">
						<p><%= msg %></p>
					</div>
				<% end %>

				<%= yield %>
			</div>
		</div>
	</div>

	
	<div id="footer">
		<%= render 'layouts/footer' %>
	</div>
	
</body>
</html>
